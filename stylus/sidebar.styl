.sidebar{
    transition: left .2s, box-shadow .2s;

    background brand-primary
    min-width 200px
    max-width 200px
    display flex
    flex-direction column
    font-size: 13px;
    font-weight: 100;
    overflow: scroll;

    .action-link{
        color: #aaa;
    }
    .sidebar-header {
        text-align: center;
        height: 50px;
        min-height: 50px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding: 12px 10px;
        color: rgba(255, 255, 255, 0.5);
        font-size: 18px;
        margin-bottom: 10px;

        .microtext {
            font-size: 10px;
            font-weight: 100;
            color: rgba(255, 255, 255, 0.3);
        }
    }
    .nav-header {
        font-size: 10px;
        text-transform: uppercase;
        color: #fff;
        font-weight: 400;
        padding: 10px 10px 2px 10px;
    }
    nav{
        margin-bottom: 10px;

        a{
            display: block;
            padding: 8px 10px;
            color: #aaa;
            text-decoration: none;
            &:hover, &.active{
                color: #fff
            }
            .item-icon{
                margin-right: 10px
            }
        }
    }
}
