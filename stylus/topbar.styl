.topbar {
    background: #fff
    box-shadow 0 2px 3px rgba(0, 0, 0, 0.24)
    border-bottom 1px solid rgba(0, 0, 0, 0.24)
    height 50px

    .searchform {
        .bar-icon {
            padding-left: 15px;
        }
        input {
            border: none;
            padding: 12px 0px;
            margin-left: 10px;
        }
        input:focus {
            outline: none;
        }
    }
    .links{
        padding: 12px;
        a {
            
            margin: 0px 10px;
            color: #7d7d7d;
            @media (max-width: 767px){
                &.visible-xs{
                    display inline !important
                }
            }
        }
    }

}
